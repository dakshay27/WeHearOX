<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:weightSum="7.75">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_wehearox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/wehearox"
                android:layout_margin="22dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#f5f5f5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.triggertrap.seekarc.SeekArc
                        android:id="@+id/seek_volume"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        android:scrollbarStyle="outsideOverlay"
                        app:arcWidth="10dp"
                        app:max="20"
                        app:progress="15"
                        app:progressColor="@color/pink"
                        app:progressWidth="8dp"
                        app:rotation="195"
                        app:roundEdges="true"
                        app:startAngle="30"
                        app:sweepAngle="270"
                        app:thumb="@color/colorAccent"
                        app:touchInside="true" />


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                      >

                        <ImageView
                            android:id="@+id/img_bonephones"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/product" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:src="@drawable/ic_baseline_volume_mute_24"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginBottom="30dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_baseline_volume_up_24"/>

                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#f5f5f5"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_margin="1.5dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="32dp"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        app:cardCornerRadius="20dp"
                        android:clickable="true">

                        <LinearLayout
                            android:elevation="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:gravity="center"
                            android:weightSum="4"
                            android:outlineProvider="bounds"
                            android:id="@+id/card_outdoor">

                            <ImageView
                                android:id="@+id/img_outdoor"
                                android:src="@drawable/ic_outdoor"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:foregroundGravity="center"
                                android:gravity="bottom"
                                android:layout_marginTop="5dp"/>

                            <TextView
                                android:id="@+id/tv_outdoor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:padding="4dp"
                                android:text="Outdoor Mode"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/metropolis_medium"
                                android:textSize="18sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="1dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="32dp"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        app:cardCornerRadius="20dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/card_eq"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:weightSum="4"
                            android:clickable="true">

                            <ImageView
                                android:id="@+id/img_equalizer"
                                android:src="@drawable/ic_equalizer"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="4"
                                android:gravity="bottom|center"/>

                            <TextView
                                android:id="@+id/tv_equalizer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:padding="4dp"
                                android:text="Equalizer"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/metropolis_medium"
                                android:textSize="18sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>