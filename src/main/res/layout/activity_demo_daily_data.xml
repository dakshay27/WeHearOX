<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyData.DemoDailyDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/radius" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-50dp"
            android:layout_weight="0.5"
            android:gravity="start"
            android:layout_marginLeft="15sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/pathback" />

            <TextView
                android:id="@+id/tv_daily"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="left|center_vertical"
                android:text="Daily Data Analysis"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.25">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/br_chart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="#f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="5.5"
            android:background="#f5f5f5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:padding="32dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/card_mOX"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:outlineProvider="bounds"
                            android:weightSum="4">

                            <TextView
                                android:id="@+id/tv_minUsedOX"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"

                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="right"
                                android:text="112"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_head"

                                app:autoSizePresetSizes="@array/autotext_text_size"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"

                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="Minutes \nUsed with OX"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size"
                                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:padding="32dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/card_MWOX"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <TextView
                                android:id="@+id/tv_minuteUsedOther"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="right"
                                android:text="64"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_head"
                                app:autoSizePresetSizes="@array/autotext_text_size"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="Minutes \nUsed with others"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size"
                                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:padding="32dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/card_AVGST"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"

                                android:layout_weight="2"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_avgSessionLength"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/metropolis_regular"
                                    android:gravity="right|center_vertical"
                                    android:text="70"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_head"
                                    app:autoSizePresetSizes="@array/autotext_text_size"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/metropolis_regular"
                                    android:gravity="center_vertical"
                                    android:text="min"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size"
                                    app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                    app:autoSizeTextType="uniform" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"

                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="Average \nSession Time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size"
                                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                app:autoSizeTextType="uniform" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:padding="32dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/card_AVGVOL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <TextView
                                android:id="@+id/tv_avgVolume"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="right"
                                android:text="70"

                                android:textColor="@color/black"
                                android:textSize="@dimen/text_head"
                                app:autoSizePresetSizes="@array/autotext_text_size"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="Average\nSound Volume"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size"
                                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:padding="32dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/card_AVGSURNOICE"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/tv_averagedb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"


                                    android:fontFamily="@font/metropolis_regular"
                                    android:gravity="right|center_vertical"
                                    android:text="75"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_head"
                                    app:autoSizePresetSizes="@array/autotext_text_size"
                                    app:autoSizeTextType="uniform" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"

                                    android:fontFamily="@font/metropolis_regular"
                                    android:gravity="center_vertical"
                                    android:text="db"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size"
                                    app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                    app:autoSizeTextType="uniform" />
                            </LinearLayout>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"

                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="Average\nSurrounding Noise"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size"
                                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:padding="32dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:id="@+id/card_DPHI"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:weightSum="4">

                            <TextView
                                android:id="@+id/tv_phivalue"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="right"
                                android:text="12"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_head"
                                app:autoSizePresetSizes="@array/autotext_text_size"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:fontFamily="@font/metropolis_regular"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:text="Daily\nPHI Value"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size"
                                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                                app:autoSizeTextType="uniform" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>