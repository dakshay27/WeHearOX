<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".AvailableDevicesActivity">

    <LinearLayout
        android:id="@+id/linear_choose_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/custom_toolbar_available_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="0.5"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="8sp"
            android:layout_weight="0.5"
            android:background="#fff"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:text="Choose your headset"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:layout_weight="4.7">

                <ListView
                    android:id="@+id/list_available_devices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"
                    android:dividerHeight="1dp"
                    android:visibility="visible" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="#fff" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.05"
            android:background="@drawable/numberpartition"
            android:elevation="8dp"
            app:cardCornerRadius="10dip">

            <Button
                android:id="@+id/btn_oxisnotinthelist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/custom_button2"
                android:cropToPadding="true"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="My OX is not on the list"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                app:autoSizePresetSizes="@array/autotext_text_size_simple"
                app:autoSizeTextType="uniform" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/custom_toolbar_available_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:orientation="vertical"
                android:weightSum="13">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView

                        android:id="@+id/img_connect_start"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_colored" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="2.5"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Connecting to your device"
                        android:textAlignment="viewStart"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_size"
                        app:autoSizePresetSizes="@array/autotext_text_size_simple"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_1"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_2"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_3"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_4"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_registration_start"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Registration your device to our cloud"
                        android:textAlignment="viewStart"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_size"
                        app:autoSizePresetSizes="@array/autotext_text_size_simple"
                        app:autoSizeTextType="uniform" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_5"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_6"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_7"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_dot_8"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/img_registration_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/circle_pink" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="2.5"
                        android:fontFamily="@font/metropolis_medium"
                        android:text="Registration completedâ€¦!"
                        android:textAlignment="viewStart"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/text_size"
                        app:autoSizePresetSizes="@array/autotext_text_size_simple"
                        app:autoSizeTextType="uniform"/>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_corner_button"
                android:text="Getting any troubles" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>