                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.2"
                                    android:gravity="left"
                                    android:padding="5dp"
                                    android:text="Minutes used\nwith other device"

                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="4px"
                                    android:layout_height="match_parent"
                                    android:background="#878484" />

                                <TextView
                                    android:id="@+id/txt_minute_used_without_target"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.4"
                                    android:padding="5dp"
                                    android:text="140"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/txt_minute_used_without_current"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.4"
                                    android:padding="5dp"
                                    android:text="195"

                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/custom_roud_gray_border"

                                android:weightSum="5">

                                <TextView
                                    android:layout_width="0dp"
